{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "globals": {
    "__DEV__": true,
    "XMLHttpRequest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [1, "never"],
    "key-spacing": [1, {
        "beforeColon": false,
        "afterColon": true,
        "mode": "strict"
      }
    ],
    "newline-per-chained-call": [1, {
        "ignoreChainWithDepth": 2
      }
    ],
    "no-console": 0,
    "no-undef": 2,
    "no-constant-condition": 1,
    "no-unused-vars": 0,
        "indent": [2, 2, {
            "SwitchCase": 1
          }
        ],
    "no-use-before-define": [2, {
        "functions": false,
        "classes": false
      }
    ],
    "no-restricted-syntax": 1,
    "new-cap": [2, {
        "capIsNewExceptions": [
          "Immutable",
          "List",
          "Map",
          "Reducer",
          "StackNavigator",
          "TabNavigator",
          "TabNavigator"
        ]
      }
    ],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "array-callback-return": 1
  }
}